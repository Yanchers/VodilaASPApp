
@{
    
}
<div class="shipments-main">
    <div class="shipments-header">
        <p><i>Тысячи</i> <span>удивительных</span> поездок в одном клике от вас!</p>
    </div>

    <div class="shipments-list-container">
        <div class="shipments-list-header">
            <p>Вакатные <span>перевозки</span></p>
        </div>

        <div class="shipments-list-search">
            <i class="fas fa-search-location"></i>
            <input type="text" placeholder="Поиск..."/>
        </div>

        <div class="shipments-list">
            @foreach (Shipment item in Model)
            {
                <div class="shipment-item">
                    <div class="item-priority-container">

                    </div>
                    <div class="item-place-container">
                        <p>@item.Route.Departureplace</p>
                        <i class="fas fa-caret-down"></i>
                        <p>@item.Route.Arrivalplace</p>
                    </div>
                    <div class="item-info-container">
                        <p>@item.Route.Distance км</p>
                        <i class="fas fa-caret-down"></i>
                        <p>@item.Route.Payment $</p>
                    </div>
                    <div class="item-icons">
                        <i class="fas fa-user"></i>
                        <i class="fas fa-truck"></i>
                    </div>
                    <a asp-action="Details" asp-route-id="@item.Id">
                        <i class="fas fa-external-link-alt"></i>
                    </a>
                </div>
            }
        </div>
    </div>
</div>