@model VodilaASPApp.Models.Route

@{
    ViewData["Title"] = "Create";
}

<h1>Создать маршрут</h1>
<div class="create-container">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="vodila-input">
            <p>Место отправления</p>
            <input asp-for="Departureplace" class="form-control" />
            <span asp-validation-for="Departureplace" class="text-danger"></span>
        </div>
        <div class="vodila-input">
            <p>Место прибытия</p>
            <input asp-for="Arrivalplace" class="form-control" />
            <span asp-validation-for="Arrivalplace" class="text-danger"></span>
        </div>
        <div class="vodila-input">
            <p>Расстояние</p>
            <input asp-for="Distance" class="form-control" />
            <span asp-validation-for="Distance" class="text-danger"></span>
        </div>
        <div class="vodila-input">
            <p>Второй водитель?</p>
            <input asp-for="RequireSecondDriver" class="form-control" />
            <span asp-validation-for="Arrivalplace" class="text-danger"></span>
        </div>
        <button type="submit" class="btn-vodila">Создать</button>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
