@if (User.Identity.IsAuthenticated)
{
    <form method="post" asp-page="/Account/Logout">
        <a asp-page="/Account/Profile">Привет @User.Identity.Name</a>
        <button type="submit">Выйти</button>
    </form>
}
else
{
    <p>
        <a asp-page="/Account/Login">Авторизуйся</a> быдло
    </p>
}