@using System.IO
@model IEnumerable<Useraccount>

@{
    ViewData["Title"] = "Edit";
}

<div class="list-container">
    <div class="list-header">
        <h1>Все <u>водители</u></h1>
        <a asp-action="Create"><i class="fas fa-user-plus"></i></a>
    </div>

    <table>
        <tr class="list-table-header">
            <th>ФИО</th>
            <th>Доход</th>
            <th>Почта</th>
            <th colspan="3">Дата устройства</th>
        </tr>
        @foreach (Useraccount item in Model)
        {
            <tr class="list-item">
                <td>@item.FullName</td>
                <td>???$</td>
                <td>@item.Email</td>
                <td>@item.Employmentdate.ToShortDateString()</td>
                <td class="list-item-btn">
                    <a asp-action="Edit" asp-route-id="@item.Id">
                        <i class="fas fa-user-edit"></i>
                    </a>
                </td>
                <td class="list-item-btn">
                    <a asp-action="Delete" asp-route-id="@item.Id">
                        <i class="fas fa-user-slash"></i>
                    </a>
                </td>
            </tr>
        }
    </table>
</div>